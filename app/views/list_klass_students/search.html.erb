<% content_for :title, "Список студентов класса" %>

<div class="container">
  <h1 class="page-title">Список студентов класса</h1>

  <%= link_to 'Главная страница', controller: 'home_page', class: 'btn btn-back' %> | 
  <%= link_to 'Назад', action: 'choose_school', school_id: @klass.school.id, class: 'btn btn-back' %>

  <br><br>

  <h2 class="school-title">Школа: <%= @klass.school.name %> №<%= @klass.school.number %></h2>
  <h3 class="klass-title">Класс: <%= @klass.number %> <%= @klass.letter %></h3>

  <br>

  <table class="table">
    <thead>
      <tr>
        <th>Код</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th>Код школы</th>
        <th>Код класса</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.id %></td>
          <td><%= student.surname %></td>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.school_id %></td>
          <td><%= student.klass_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  body {
    font-family: 'Helvetica Neue', sans-serif;
    background-color: #f3f4f6;
    margin: 0;
    padding: 0;
    color: #333;
  }

  .container {
    width: 70%;
    margin: 0 auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    margin-top: 30px;
  }

  .page-title {
    font-size: 32px;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 20px;
  }

  .school-title, .klass-title {
    font-size: 24px;
    font-weight: 600;
    color: #333;
  }

  .btn {
    padding: 12px 18px;
    font-size: 14px;
    border-radius: 5px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn:hover {
    transform: scale(1.05);
  }

  .btn-back {
    background-color: #6c757d;
    color: #fff;
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  .table th, .table td {
    padding: 12px;
    text-align: left;
    border: 1px solid #ddd;
  }

  .table th {
    background-color: #f8f9fa;
    font-weight: 600;
  }

  .table tbody tr:hover {
    background-color: #f1f1f1;
  }
</style>
