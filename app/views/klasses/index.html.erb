<% content_for :title, "Список классов" %>

<div class="container">
  <h1 class="page-title">Список классов</h1>

  <%= link_to 'Главная страница', controller: 'home_page', class: 'btn btn-back' %>

  <!-- Уведомление -->
  <%= notice && content_tag(:div, notice, class: 'alert alert-success') %>

  <!-- Кнопка для добавления нового класса -->
  <div class="add-button">
    <%= link_to "Добавить новый класс", new_klass_path, class: 'btn btn-primary' %>
  </div>

  <!-- Таблица со списком классов -->
  <table class="klasses-table">
    <thead>
      <tr>
        <th>Код</th>
        <th>Номер класса</th>
        <th>Буква</th>
        <th>Школа</th>
        <th>Количество учеников</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @klasses.each do |klass| %>
        <tr>
          <td><%= klass.id %></td>
          <td><%= klass.number %></td>
          <td><%= klass.letter %></td>          
          <td>
            <%= klass.school.present? ? "#{klass.school.name} №#{klass.school.number}" : "Школа не указана" %>
          </td>
          <td><%= klass.students_count %></td>
          <td>          
            <%= link_to "Показать", klass, class: 'btn btn-show' %> |
            <%= link_to "Редактировать", edit_klass_path(klass), class: 'btn btn-edit' %> |
            <%= link_to "Удалить", klass, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  body {
    font-family: 'Helvetica Neue', sans-serif;
    background-color: #f3f4f6;
    margin: 0;
    padding: 0;
    color: #333;
  }

  .container {
    width: 85%;
    margin: 0 auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    margin-top: 30px;
  }

  .page-title {
    font-size: 30px;
    margin-bottom: 25px;
    font-weight: 600;
    color: #3a3a3a;
  }

  .btn {
    padding: 8px 16px;
    font-size: 14px;
    border-radius: 5px;
    text-decoration: none;
    color: #fff;
    display: inline-block;
    transition: background-color 0.3s ease;
  }

  .btn-back {
    background-color: #8e8e8e;
    margin-bottom: 15px;
  }

  .btn-primary {
    background-color: #5c6bc0;
  }

  .btn-show {
    background-color: #4caf50;
  }

  .btn-edit {
    background-color: #ff9800;
  }

  .btn-delete {
    background-color: #f44336;
  }

  .btn:hover {
    opacity: 0.9;
  }

  .add-button {
    text-align: right;
    margin-bottom: 20px;
  }

  .table-wrapper {
    overflow-x: auto;
  }

  .klasses-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    margin-top: 20px;
  }

  .klasses-table th,
  .klasses-table td {
    padding: 15px;
    text-align: left;
  }

  .klasses-table th {
    background-color: #5c6bc0;
    color: white;
    text-transform: uppercase;
    font-weight: 600;
  }

  .klasses-table tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .klasses-table tr:hover {
    background-color: #f1f1f1;
    cursor: pointer;
  }

  .alert {
    background-color: #e8f5e9;
    color: #388e3c;
    border-radius: 5px;
    padding: 12px;
    margin-bottom: 25px;
  }
</style>
