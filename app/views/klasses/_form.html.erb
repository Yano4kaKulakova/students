<%= form_with(model: klass, class: 'klass-form') do |form| %>
  <% if klass.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(klass.errors.count, "error") %> prohibited this klass from being saved:</h2>
      <ul>
        <% klass.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :number, "Номер класса", class: "form-label" %>
    <%= form.select :number, options_for_select((1..11).to_a), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :letter, "Буква класса", class: "form-label" %>
    <%= form.text_field :letter, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :school_id, "Школа", class: "form-label" %>
    <%= form.collection_select(:school_id, School.all, :id, ->(school) { "#{school.name} №#{school.number}" }, {}, class: "form-control") %>
  </div>

  <div class="form-group">
    <%= form.submit "Сохранить", class: "btn btn-submit" %>
  </div>
<% end %>


<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f7f9fc;
    margin: 0;
    padding: 0;
  }

  .klass-form {
    width: 60%;
    margin: 0 auto;
    padding: 30px;
    background-color: #ffffff;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: #333;
  }

  .form-control {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 14px;
  }

  .form-control:focus {
    border-color: #007bff;
    outline: none;
  }

  .alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 25px;
  }

  .btn {
    padding: 12px 20px;
    font-size: 14px;
    border-radius: 5px;
    display: inline-block;
    text-decoration: none;
    transition: background-color 0.3s ease;
    cursor: pointer;
  }

  .btn-submit {
    background-color: #007bff;
    color: #fff;
    width: 100%;
  }

  .btn-submit:hover {
    background-color: #0056b3;
  }
</style>
